
<h2>新規会員登録</h2>

　<%= form_with model: @customer, url: customer_registration_path do |f| %>
　<%= render "public/shared/error_messages", resource: resource %>
　<div class="field">
    (姓)<%= f.label :名前%><br />
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>
　<div class="field">
    (名)<%= f.label :名前%><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

　<div class="field">
    <%= f.label :郵便番号（ハイフンなし）%><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所%><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

　<div class="field">
    <%= f.label :電話番号（ハイフンなし）%><br />
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
  既に登録済みの方
  <%= link_to "こちら", new_customer_session_path(@customer.id) %>からログインしてください。

</div>
<%#= render "publics/shared/links" %>
