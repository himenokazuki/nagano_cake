<h1>注文履歴詳細</h1>


<h2>注文情報</h2>


<table border "1">
  <td>注文日</td>
  <td><%= @order.created_at %></td>
</tr>

<tr>
  <td>配送先</td>
  <td><%= @order.post_code %><%= @order.address %><%= @order.address_name %></td>
</tr>

<tr>
  <td>支払方法</td>
  <td><%= @order.payment %></td>
</tr>
</table>

<table border "1">
<h2>請求情報</h2>
<tr>
  <td>商品合計</td>
  <td><%= @order.total_price %></td>
</tr>

<tr>
  <td>配送料</td>
  <td>800</td>
</tr>

<tr>
  <td>ご請求額</td>
  <td><%= @order.total_price+800 %></td>
</tr>
</table>

<h2>注文内容</h2>
<table border "1">
  <thaed>
    <tr>
    <td>商品</td>
    <td>単価（税込）</td>
    <td>個数</td>
    <td>小計</td>
    </tr>
    
  </thead>
  <% @order_products.each do |order_product| %>
    <tr>
      <td><%= order_product.item.name %></td>
      <td><%= order_product.price_tax %></td>
      <td><%= order_product.amount %></td>
      <td><%= order_product.price_tax*order_product.amount %></td>
    </tr>
   <% end %>
</table>


