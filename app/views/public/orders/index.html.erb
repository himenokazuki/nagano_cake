<h1>注文履歴一覧</h1>

<table border="1">
<tr>
<th>注文日</th>
<th>配送先</th>
<th>注文商品</th>
<th>支払い金額</th>
<th>注文詳細</th>
</tr>
<% @orders.each do |order| %>
<tr>
<td><%= order.created_at %></td>
<td><%= order.post_code %><%= order.address %><%= order.address_name %></td>
<td>
 <% order.order_products.each do |order_product| %>
 <%= order_product.item.name %>
 <% end %>
 </td>
<td><%= order.total_price %></td>

<td><%= link_to "表示する",order_path(order.id) %></td>
</tr>
<% end %>
</table>
