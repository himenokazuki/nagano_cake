<h1>商品編集</h1>

<%= form_with model:@item,url:edit_admin_item_path, method: :get do |f| %>
<table>
  <tr>
  <td>商品画像</td> 
  <td><%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %></td>
  </tr>
  
  <tr>
    <td>商品名</td>
    <td> <%= f.text_field :name%></td>
  </tr>
  
  <tr>
    <td>商品説明</td>
    <td> <%= f.text_field :introduction%></td>
  </tr>
  
  <tr>
    <td> 税抜価格</td>
    <td> <%= f.number_field :price%></td>
  </tr>
</table>
<%= f.submit '変更を保存',class: "btn btn-success"  %>
<% end %>